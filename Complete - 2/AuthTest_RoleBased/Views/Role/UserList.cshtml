@model IEnumerable<AuthTest_RoleBased.Data.ApplicationUser>

@{
    ViewData["Title"] = "Users with Orders";
}

<div class="container mt-4">
    <h2 class="mb-4 text-success text-center">
        <i class="bi bi-people-fill"></i> @ViewData["Title"]
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm text-center">
            <i class="bi bi-exclamation-triangle-fill"></i> No users with orders found.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th><i class="bi bi-person-circle"></i> User Name</th>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th><i class="bi bi-box-seam"></i> Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a href="@Url.Action("UserOrders", "Role", new { userId = user.Id, userName = user.UserName })"
                                   class="btn btn-sm btn-outline-primary"
                                   title="View @user.UserName's orders">
                                    <i class="bi bi-eye-fill"></i> View Orders
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


