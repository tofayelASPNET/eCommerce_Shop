@{
    ViewData["Title"] = "Role Management";
}

<div class="container my-5">
    <div class="card shadow-sm p-4 border-0 rounded-4">
        <h2 class="text-center text-info mb-4">
            <i class="bi bi-shield-lock-fill me-1"></i> Role Management
        </h2>

        @if (!string.IsNullOrEmpty(ViewBag.msg))
        {
            <div class="alert alert-success text-center fw-semibold">
                @ViewBag.msg
            </div>
        }

        <!-- Create Role Form -->
        <div class="row justify-content-center mb-5">
            <div class="col-md-8 col-lg-6">
                <form asp-action="CreateRole" asp-controller="Role" method="post" class="bg-light p-4 rounded-3 border shadow-sm">
                    <div class="mb-3 row">
                        <label for="userRole" class="col-sm-3 col-form-label fw-semibold">
                            <i class="bi bi-person-badge-fill me-1"></i> Role Name:
                        </label>
                        <div class="col-sm-9">
                            <input type="text" name="userRole" id="userRole" class="form-control" placeholder="Please type role name..." required />
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-plus-circle me-1"></i> Create Role
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Role List Table -->
        <div class="row">
            <div class="col-12">
                <h4 class="mb-3 text-secondary">🔍 Available Roles</h4>

                <table class="table table-bordered table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Role Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.roleList != null && ViewBag.roleList.Count > 0)
                        {
                            int i = 1;
                            foreach (var role in ViewBag.roleList)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@role.Name</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <!-- Edit Button -->
                                            <form asp-action="EditRole" asp-controller="Role" method="get">
                                                <input type="hidden" name="oldRoleName" value="@role.Name" />
                                                <button type="submit" class="btn btn-warning btn-sm">
                                                    <i class="bi bi-pencil-fill"></i> Edit
                                                </button>
                                            </form>

                                            <!-- Delete Button -->
                                            <form asp-action="DeleteRole" asp-controller="Role" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                                                <input type="hidden" name="roleName" value="@role.Name" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash-fill"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-muted">No roles found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .btn-sm {
        padding: 4px 10px;
        font-size: 14px;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .fw-semibold {
        font-weight: 600;
    }

    .rounded-4 {
        border-radius: 1rem;
    }
</style>







