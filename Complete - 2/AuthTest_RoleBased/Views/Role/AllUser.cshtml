@model List<AuthTest_RoleBased.Data.ApplicationUser>
@{
    ViewBag.Title = "All Registered Users";
    var roles = ViewBag.Roles as List<string>;
    var userRolesDict = ViewBag.UserRolesDict as Dictionary<string, IList<string>>;
}

<div class="container my-5">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="text-center mb-4 text-primary">
            <i class="bi bi-people-fill me-2"></i> All Registered Users
        </h2>

        @if (ViewBag.msg != null)
        {
            <div class="alert alert-success text-center fw-semibold">
                @ViewBag.msg
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-person-fill"></i> Username</th>
                        <th><i class="bi bi-envelope-fill"></i> Email</th>
                        <th><i class="bi bi-shield-lock-fill"></i> Roles</th>
                        <th><i class="bi bi-gear-fill"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (userRolesDict != null && userRolesDict.ContainsKey(user.Id))
                                    {
                                        foreach (var role in userRolesDict[user.Id])
                                        {
                                            <span class="badge bg-info text-dark me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No roles</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?')" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-muted">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-start mb-4">
    <a asp-controller="Role" asp-action="AssignRole" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Back
    </a>
</div>


