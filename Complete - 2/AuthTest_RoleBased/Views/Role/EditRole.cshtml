@model string
@{
    ViewData["Title"] = "Edit Role";
}

<div class="container my-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 bg-light">
        <h2 class="text-center text-warning mb-4">
            <i class="bi bi-pencil-square me-1"></i> Edit Role Name
        </h2>

        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success text-center fw-semibold">
                @TempData["msg"]
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form asp-action="EditRole" method="post" class="border rounded-3 p-4 bg-white shadow-sm">
                    <input type="hidden" name="oldRoleName" value="@Model" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-tag-fill me-1"></i> Current Role Name
                        </label>
                        <input type="text" class="form-control bg-light" value="@Model" disabled />
                    </div>

                    <div class="mb-4">
                        <label for="newRoleName" class="form-label fw-semibold">
                            <i class="bi bi-pencil-fill me-1"></i> New Role Name
                        </label>
                        <input type="text" name="newRoleName" id="newRoleName" class="form-control"
                               placeholder="Enter new role name..." required minlength="3" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back
                        </a>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-save-fill me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Bootstrap Toast Notification -->
@if (TempData["toast"] != null)
{
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast align-items-center text-bg-success border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["toast"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        const toastElList = [].slice.call(document.querySelectorAll('.toast'));
        toastElList.forEach(function (toastEl) {
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        });
    </script>
}
