@model AuthTest_RoleBased.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary mb-4"> <i class="bi bi-plus-circle"></i> Create Product</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-info-circle-fill me-2"></i>
                <h5 class="mb-0">Product Information</h5>
            </div>

            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"><i class="bi bi-box"></i> Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Unit" class="form-label"><i class="bi bi-info-circle"></i> Details</label>
                        <input asp-for="Unit" class="form-control" placeholder="Enter product details" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"><i class="bi bi-currency-exchange"></i> ৳ Price</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label"><i class="bi bi-123"></i> Quantity</label>
                        <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label"><i class="bi bi-image"></i> Product Photo</label>
                        <input type="file" name="imageFile" id="photoInput" class="form-control form-control-sm" onchange="previewImage(event)" accept="image/*" />
                        <span asp-validation-for="Photo" class="text-danger"></span>

                        <div class="text-center mt-3">
                            <img id="photoPreview" class="img-thumbnail d-none mx-auto"
                                 style="width: 120px; height: 120px; object-fit: cover; border: 2px solid #ccc;" />
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg shadow">
                            <i class="bi bi-check-circle-fill"></i> Create Product
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Back to Product List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('photoPreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
