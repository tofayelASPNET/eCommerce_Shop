@model AuthTest_RoleBased.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-primary mb-1"><i class="bi bi-pencil-square"></i> Edit Product</h1>
<h5 class="text-center text-secondary mb-4">Update Product Details</h5>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Product Information</h5>
            </div>

            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="ProductId" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Unit" class="form-label">Details</label>
                        <input asp-for="Unit" class="form-control" placeholder="Enter unit of measurement" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label">Quantity</label>
                        <input asp-for="Quantity" class="form-control" type="number" placeholder="Enter quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Image</label>
                        <input type="file" name="imageFile" id="photoInput" class="form-control form-control-sm"
                               onchange="previewImage(event)" accept="image/*" />
                    </div>

                    <!-- ✅ Image Preview with spacing & centered -->
                    <div class="text-center mb-4">
                        <img id="photoPreview"
                             src="@(!string.IsNullOrEmpty(Model.Photo) ? Url.Content(Model.Photo) : "#")"
                             class="img-thumbnail @(string.IsNullOrEmpty(Model.Photo) ? "d-none" : "") mx-auto"
                             style="width: 110px; height: 110px; object-fit: cover; border: 2px solid #ddd;" />
                        <div class="form-text mt-1 text-muted"></div>
                    </div>

                    <span asp-validation-for="Photo" class="text-danger d-block text-center mb-3"></span>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg px-4 shadow">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to Product List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('photoPreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
