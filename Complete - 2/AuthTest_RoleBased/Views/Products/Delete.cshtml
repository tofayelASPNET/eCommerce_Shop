@model AuthTest_RoleBased.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="text-center text-danger mb-4">Delete Product</h1>

<h3 class="text-center text-secondary mb-4">Are you sure you want to delete this product?</h3>

<div class="card shadow-lg">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Product Details</h5>
    </div>
    <div class="card-body">
        <h4 class="text-center">Product Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Unit)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Unit)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <dt class="col-sm-3">
                    Photo
                </dt>
                <dd class="col-sm-9">
                    <img src="@Model.Photo" alt="Product Photo" width="150" height="150" style="object-fit:cover; border-radius:10px;" />
                </dd>
            }
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger btn-lg">Delete Product</button>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Product List</a>
            </div>
        </div>
    </div>
</div>
